<?xml version="1.0" encoding="utf-8"?>

<connection-fields>

  <field name="server" label="@string/Neptune Endpoint/" category="endpoint" value-type="string">
    <validation-rule reg-exp="^(([a-zA-Z]|[a-zA-Z][a-zA-Z0-9\-]*[a-zA-Z0-9])\.)*([A-Za-z]|[A-Za-z][A-Za-z0-9\-]*[A-Za-z0-9])$"/>
  </field>

  <field name="port" label="@string/Port/" category="endpoint" value-type="string" default-value="8182">
    <!-- Validates that port range is from 0 to 65535. -->
    <validation-rule reg-exp="^([0-9]{1,4}|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])$"/>
  </field>

  <field name="authentication" label="@string/Use IAM Authentication/" category="authentication" value-type="boolean" default-value="auth-user" >
    <boolean-options>
      <false-value value="auth-none" />
      <true-value value="auth-user" />
    </boolean-options>
  </field>

  <field name="v-service-region" label="@string/Service Region/" value-type="string" category="authentication">
    <conditions>
      <condition field="authentication" value="auth-user" />
    </conditions>
    <validation-rule reg-exp="^(([a-zA-Z]|[a-zA-Z][a-zA-Z0-9\-]*[a-zA-Z0-9])\.)*([A-Za-z]|[A-Za-z][A-Za-z0-9\-]*[A-Za-z0-9])$"/>
  </field>

  <field name="sslmode" label="@string/Require SSL/" value-type="boolean" category="authentication" default-value="require" >
    <boolean-options>
      <false-value value="" />
      <true-value value="require" />
    </boolean-options>
  </field>

  <field name="v-additional-properties" label="@string/Additional Connection Options/" category="general" value-type="string" default-value="" optional="true"/>


  <!-- Advanced tab. -->
  <field name="v-ssh-tunnel" label="@string/Enable SSH Tunnel/" value-type="boolean" category="advanced" optional="true" default-value="false">
    <boolean-options>
      <false-value value="false" />
      <true-value value="true" />
    </boolean-options>
  </field>

  <field name="v-ssh-user" label="@string/SSH User/" value-type="string" category="advanced" optional="true" default-value="">
    <conditions>
      <condition field="v-ssh-tunnel" value="true" />
    </conditions>
  </field>

  <field name="v-ssh-host" label="@string/SSH Hostname/" value-type="string" category="advanced" optional="true" default-value="">
    <conditions>
      <condition field="v-ssh-tunnel" value="true" />
    </conditions>
  </field>

  <field name="v-ssh-priv-key-filename" label="@string/SSH Private Key File/" value-type="file" category="advanced" optional="true" default-value="">
    <conditions>
      <condition field="v-ssh-tunnel" value="true" />
    </conditions>
  </field>

  <field name="v-ssh-priv-key-passphrase" label="@string/SSH Private Key File Passphrase/" value-type="string" category="advanced" optional="true" default-value="">
    <conditions>
      <condition field="v-ssh-tunnel" value="true" />
    </conditions>
  </field>

  <field name="v-ssh-strict-host-key-check" label="@string/SSH Strict Host Key Check (disabling option is less secure)/" value-type="boolean" category="advanced" optional="true" default-value="true">
    <conditions>
      <condition field="v-ssh-tunnel" value="true" />
    </conditions>
    <boolean-options>
      <false-value value="false" />
      <true-value value="true" />
    </boolean-options>
  </field>

  <field name="v-ssh-known-hosts-file" label="@string/SSH Known Hosts File/" value-type="file" category="advanced" optional="true" default-value="~/.ssh/known_hosts">
    <conditions>
      <condition field="v-ssh-strict-host-key-check" value="true" />
    </conditions>
  </field>

</connection-fields>
